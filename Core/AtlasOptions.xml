				<Scripts>
					<OnLoad>
						AtlasOptions_SetupSlider(self, ATLAS_OPTIONS_BUTPOS, 0, 360, 1);
					</OnLoad>
					<OnValueChanged>
						AtlasOptions_UpdateSlider(self, ATLAS_OPTIONS_BUTPOS);
